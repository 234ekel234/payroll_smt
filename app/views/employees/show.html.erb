<div class="card shadow-sm">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h5 class="mb-0">Employee Details</h5>

    <%= link_to "Edit", edit_employee_path(@employee),
          class: "btn btn-primary btn-sm" %>
  </div>

  <div class="card-body">
    <dl class="row mb-0">

      <dt class="col-sm-3">Employee ID</dt>
      <dd class="col-sm-9"><%= @employee.person_id %></dd>

      <dt class="col-sm-3">Name</dt>
      <dd class="col-sm-9"><%= @employee.name %></dd>

      <dt class="col-sm-3">Company</dt>
      <dd class="col-sm-9"><%= @employee.company %></dd>

      <dt class="col-sm-3">Employment Status</dt>
      <dd class="col-sm-9"><%= @employee.status_of_employment %></dd>

      <dt class="col-sm-3">Basic Rate</dt>
      <dd class="col-sm-9">
        ₱ <%= number_with_precision(@employee.basic_rate, precision: 2) %>
      </dd>

      <dt class="col-sm-3">Allowance / Day</dt>
      <dd class="col-sm-9">
        ₱ <%= number_with_precision(@employee.allowance_per_day, precision: 2) %>
      </dd>

      <dt class="col-sm-3">Work Days</dt>
      <dd class="col-sm-9"><%= @employee.formatted_work_days %></dd>

      <dt class="col-sm-3">Rest Days</dt>
      <dd class="col-sm-9 text-muted">
        <%= @employee.formatted_rest_days %>
      </dd>

      <dt class="col-sm-3">Shift</dt>
      <dd class="col-sm-9">
        <%= @employee.shift_start&.strftime("%I:%M %p") %> –
        <%= @employee.shift_end&.strftime("%I:%M %p") %>
      </dd>

      <dt class="col-sm-3">Break</dt>
      <dd class="col-sm-9">
        <%= @employee.break_start&.strftime("%I:%M %p") %> –
        <%= @employee.break_end&.strftime("%I:%M %p") %>
      </dd>

      <dt class="col-sm-3">Landbank ATM</dt>
      <dd class="col-sm-9">
        <%= @employee.landbank_atm ? "Yes" : "No" %>
      </dd>

    </dl>
  </div>

  <div class="card-footer text-end">
    <%= link_to "Back to Employees", employees_path,
          class: "btn btn-secondary btn-sm" %>
  </div>
</div>
