<%= form_with(model: daily_time_record, local: true) do |f| %>
  <div class="mb-3">
    <%= f.label :employee_id, "Employee" %>
    <%= f.collection_select :employee_id, Employee.all, :id, :name, { prompt: "Select Employee" }, class: "form-select" %>
  </div>

  <div class="mb-3">
    <%= f.label :date %>
    <%= f.date_field :date, class: "form-control" %>
  </div>

  <div class="row mb-3">
    <div class="col">
      <%= f.label :clock_in %>
      <%= f.datetime_local_field :clock_in, class: "form-control" %>
    </div>
    <div class="col">
      <%= f.label :clock_out %>
      <%= f.datetime_local_field :clock_out, class: "form-control" %>
    </div>
  </div>

  <div class="mb-3">
    <%= f.label :abnormal_situation %>
    <%= f.text_field :abnormal_situation, class: "form-control" %>
  </div>

  <div class="d-flex gap-2">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Back", daily_time_records_path, class: "btn btn-secondary" %>
  </div>
<% end %>
